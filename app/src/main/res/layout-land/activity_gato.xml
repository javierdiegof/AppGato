<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    >

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_centerVertical="true"
        app:columnCount="3"
        app:rowCount="3">

        <Button
            android:id="@+id/boton0"
            android:tag="0"
            style="@style/BotonTablero"
            />

        <Button
            android:id="@+id/boton1"
            android:tag="1"
            style="@style/BotonTablero"/>

        <Button
            android:id="@+id/boton2"
            android:tag="2"
            style="@style/BotonTablero"/>

        <Button
            android:id="@+id/boton3"
            android:tag="3"
            style="@style/BotonTablero"
            />

        <Button
            android:id="@+id/boton4"
            android:tag="4"
            style="@style/BotonTablero"/>

        <Button
            android:id="@+id/boton5"
            android:tag="5"
            style="@style/BotonTablero"/>

        <Button
            android:id="@+id/boton6"
            android:tag="6"
            style="@style/BotonTablero"
            />

        <Button
            android:id="@+id/boton7"
            android:tag="7"
            style="@style/BotonTablero"/>

        <Button
            android:id="@+id/boton8"
            android:tag="8"
            style="@style/BotonTablero"/>


    </android.support.v7.widget.GridLayout>
    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:layout_toEndOf="@id/grid_layout"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        tools:text="Ganador"/>
    <Button
        android:id="@+id/reset_button"
        style="@style/BotonReset"
        android:text="@string/reset_button"
        android:layout_below="@+id/text_view"
        android:layout_margin="16dp"
        android:layout_alignEnd="@+id/boton_resultados"
        android:layout_toRightOf="@id/grid_layout"/>

    <Button
        android:id="@+id/boton_resultados"
        style="@style/BotonRes"
        android:text="@string/resultados_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        />
</RelativeLayout>
