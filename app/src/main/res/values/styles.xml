<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
    </style>


    <!-- Se definen un conjunto de propiedades para facilitar cambios -->
    <style name="BotonTablero" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="BotonReset" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="BotonRes" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TituloRes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">?android:attr/textColorHint</item>
    </style>
    <style name="ValRes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
